---
import Comments from "@/components/interactive/Comments";
import Button from "@/components/static/Button.astro";
import Card from "@/components/static/Card.astro";
import MainLayout from "@/layouts/MainLayout.astro";
---

<MainLayout title="Playground Page">
  <div class="grid gap-4">
    <Card />
    <label class="input input-bordered flex items-center gap-2">
      Server side only env variable
      <input
        type="text"
        class="grow"
        placeholder={import.meta.env.SECRET_PASSWORD}
        readonly
      />
    </label>
    <Button>Astro Component Tailwind Button</Button>
    <button class="btn btn-primary">daisyUI Button</button>
    <div class="divider"></div>
    <Comments client:only="react" />
  </div>
</MainLayout>
